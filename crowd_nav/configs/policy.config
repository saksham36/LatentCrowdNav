# policy configurations for robot

[rl]
gamma = 0.9


[om]
cell_num = 4
cell_size = 1
om_channel_size = 3


[action_space]
kinematics = holonomic
# action space size is speed_samples * rotation_samples + 1
speed_samples = 5
rotation_samples = 16
sampling = exponential
query_env = true


[cadrl]
mlp_dims = 150, 100, 100, 1
multiagent_training = false


[lstm_rl]
global_state_dim = 50
mlp1_dims = 150, 100, 100, 50
mlp2_dims = 150, 100, 100, 1
multiagent_training = true
with_om = false
with_interaction_module = false


[srl]
mlp1_dims = 150, 100, 100, 50
mlp2_dims = 150, 100, 100, 1
multiagent_training = true
with_om = false


[sarl]
mlp1_dims = 150, 100
mlp2_dims = 100, 50
attention_dims = 100, 100, 1
mlp3_dims = 150, 100, 100, 1
multiagent_training = true
with_om = false
with_global_state = true

[lili-sarl]
phi_e_dims = 150, 100
psi_h_dims = 100, 50
attention_dims = 100, 100, 1
Q_dims = 150, 100, 100, 81
encoder_dims = 128, 128
decoder_dims = 128, 128
latent_rep_dims = 8
multiagent_training = true
with_om = false
with_global_state = true
lili_flag = false

[lili]
phi_e_dims = 150, 100
psi_h_dims = 100, 50
attention_dims = 100, 100, 1
Q_dims = 150, 100, 100, 81
encoder_dims = 128, 128
decoder_dims = 128, 128
latent_rep_dims = 8
multiagent_training = true
with_om = false
with_global_state = true
lili_flag = true

